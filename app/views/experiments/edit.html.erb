<h1>Editing experiment</h1>

<%= error_messages_for :experiment %>

<% form_for(@experiment) do |f| %>
  <p>
    <b>Name</b><br />
    <%= f.text_field :name %>
  </p>

  <p>
    <b>Description</b><br />
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @experiment %> |
<%= link_to 'Back', experiments_path %>
